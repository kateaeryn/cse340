<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>

        <%- messages() %>
            <% if (errors) { %>
                <ul class="notice">
                    <% errors.array().forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>
                    <h3>Please confirm deletion of review. This action is permanent.</h3>
                    <form id="deleteReviewForm" method="post" action="../delete/">
                        <label for="review_date">Date of Review</label>
                        <input type="text" id="review_date" name="review_date" readonly value="<%= locals.review_date %>">
                        
                        <label for="review_text">Review:</label>
                        <input type="text" id="review_text" name="review_text" required pattern=".*" value="<%= locals.review_text %>" >
                        
                        <button type="submit" name="submit">Delete Review</button>
                        <input type="hidden" name="inv_id" <% if(locals.inv_id) {%> value="<%= locals.inv_id %>" <%} %>>
                        <input type="hidden" name="account_id" <% if(locals.accountData.account_id) {%> value="<%=locals.accountData.account_id %>" <%}%>>
                        <input type="hidden" name="review_id" <% if(locals.review_id) {%> value="<%=locals.review_id%>"<%}%>>
                    </form>