<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>

        <%- messages() %>
            <% if (errors) { %>
                <ul class="notice">
                    <% errors.array().forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>
                    <form id="updateReviewForm" method="post" action="/account/edit/">
                        <label for="review_date">Date of Review</label>
                        <input type="date" id="review_date" name="review_date" readonly value="<%= %>">
                              
                        <label for="review_text">Review:</label>
                        <input type="text" id="review_text" name="review_text" required pattern="^[A-Za-z]+$" value="<%= locals.review_text %>">
                               
                        <button type="submit" name="submit">Edit Review</button>
                        <input type="hidden" name="inv_id" <% if(locals.inv_id) {%> value="<%= locals.inv_id %>" <%} %>>
                        <input type="hidden" name="account_id" <% if(locals.accountData.account_id) {%> value="
                        <%=locals.accountData.account_id %>" <%}%>>
                        <input type="hidden" name="review_id" <% if(locals.review_id) {%> value="<%=locals.review_id%>"<%}%>>
                    </form>
                    <script src="/js/inv_update.js"></script>